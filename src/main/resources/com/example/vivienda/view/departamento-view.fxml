<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vivienda.view.DepartamentoViewController" hgap="15" vgap="15" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Gestión de Departamentos" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Campos de entrada -->
    <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="direccionField" promptText="Ingrese dirección" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Superficie:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="superficieField" promptText="Ingrese superficie" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Número interior:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="numeroField" promptText="Ingrese número (ej: 101, 2A)" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Edificio:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <ComboBox fx:id="comboEdificio" promptText="Seleccione edificio" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200" />

    <Label text="Propietario:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="comboPropietario" promptText="Seleccione propietario" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="200" />

    <!-- Botones -->
    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2">
        <Button fx:id="btnCrear" text="Crear" onAction="#agregarDepartamento" />
        <Button fx:id="btnActualizar" text="Actualizar" onAction="#actualizarDepartamento" />
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarDepartamento" />
        <Button fx:id="btnLimpiar" text="Limpiar" onAction="#limpiarCampos" />
        <Button fx:id="btnListar" text="Listar" onAction="#listarDepartamentos" />
    </HBox>

    <!-- Sección de filtrado -->
    <Label text="Filtrar por:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <HBox spacing="10" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="8">
        <ComboBox fx:id="filtroComboBox" prefWidth="150.0" promptText="Seleccione atributo" />
        <TextField fx:id="filtroTextField" prefWidth="200.0" promptText="Ingrese valor a buscar" />
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="departamentoTable" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2" prefHeight="250" prefWidth="900">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="direccionColumn" text="Dirección" prefWidth="150" />
            <TableColumn fx:id="superficieColumn" text="Superficie" prefWidth="100" />
            <TableColumn fx:id="numeroColumn" text="Número" prefWidth="80" />
            <TableColumn fx:id="edificioColumn" text="Edificio" prefWidth="130" />
            <TableColumn fx:id="numeroExteriorColumn" text="Número Exterior (Edificio)" prefWidth="180" />
            <TableColumn fx:id="coloniaColumn" text="Colonia" prefWidth="120" />
            <TableColumn fx:id="propietarioColumn" text="Propietario" prefWidth="140" />
            <TableColumn fx:id="numeroHabitantesColumn" text="Nº Habitantes" prefWidth="100" />
        </columns>
    </TableView>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
