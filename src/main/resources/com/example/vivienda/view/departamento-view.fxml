<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vivienda.view.DepartamentoViewController">
    <children>
        <TableView fx:id="departamentoTable" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="572.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="direccionColumn" prefWidth="150.0" text="Dirección" />
                <TableColumn fx:id="superficieColumn" prefWidth="75.0" text="Superficie" />
                <TableColumn fx:id="claveCatastralColumn" prefWidth="120.0" text="Clave Catastral" />
                <TableColumn fx:id="numeroColumn" prefWidth="75.0" text="Número" />
            </columns>
        </TableView>
        <TextField fx:id="direccionField" layoutX="14.0" layoutY="228.0" promptText="Dirección" />
        <TextField fx:id="superficieField" layoutX="179.0" layoutY="228.0" promptText="Superficie" />
        <TextField fx:id="claveCatastralField" layoutX="344.0" layoutY="228.0" promptText="Clave Catastral" />
        <TextField fx:id="numeroField" layoutX="14.0" layoutY="268.0" promptText="Número" />
        <Button fx:id="addButton" layoutX="179.0" layoutY="268.0" mnemonicParsing="false" onAction="#agregarDepartamento" text="Agregar" />
        <Button fx:id="updateButton" layoutX="253.0" layoutY="268.0" mnemonicParsing="false" onAction="#actualizarDepartamento" text="Actualizar" />
        <Button fx:id="deleteButton" layoutX="338.0" layoutY="268.0" mnemonicParsing="false" onAction="#eliminarDepartamento" text="Eliminar" />
        <Label layoutX="14.0" layoutY="310.0" text="Propietario:" />
        <TextField fx:id="propietarioField" layoutX="89.0" layoutY="306.0" promptText="ID Propietario" />
        <Label layoutX="14.0" layoutY="345.0" text="Colonia:" />
        <TextField fx:id="coloniaField" layoutX="89.0" layoutY="341.0" promptText="ID Colonia" />
        <Label layoutX="253.0" layoutY="310.0" text="Edificio:" />
        <TextField fx:id="edificioField" layoutX="314.0" layoutY="306.0" promptText="ID Edificio" />
    </children>
</AnchorPane>

