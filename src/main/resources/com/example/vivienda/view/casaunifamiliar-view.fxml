<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vivienda.view.CasaUnifamiliarViewController" hgap="15" vgap="15" alignment="CENTER" styleClass="main-pane">
    <Label text="Gestión de Casa Unifamiliar" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" styleClass="main-title" />
    <!-- Campo Dirección -->
    <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="txtDireccion" promptText="Ingrese dirección" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <!-- Campos de entrada -->
    <Label text="Superficie:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="txtSuperficie" promptText="Ingrese superficie" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Clave Catastral:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="txtClaveCatastral" promptText="Ingrese clave catastral" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Nº Pisos:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="txtNumeroPisos" promptText="Ingrese número de pisos" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Colonia:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="comboColonia" promptText="Seleccione colonia" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label text="Propietario:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <ComboBox fx:id="comboPropietario" promptText="Seleccione propietario" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <!-- Tabla -->
    <TableView fx:id="casaUnifamiliarTable" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" prefHeight="250" prefWidth="400">
        <columns>
            <TableColumn fx:id="direccionColumn" text="Dirección" />
            <TableColumn fx:id="superficieColumn" text="Superficie" />
            <TableColumn fx:id="claveCatastralColumn" text="Clave Catastral" />
            <TableColumn fx:id="numeroPisosColumn" text="Nº Pisos" />
            <TableColumn fx:id="coloniaColumn" text="Colonia" />
        </columns>
    </TableView>
    <!-- Botones -->
    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2">
        <Button fx:id="btnAgregar" text="Agregar" onAction="#onAgregar" />
        <Button fx:id="btnEditar" text="Editar" onAction="#onEditar" />
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar" />
        <Button fx:id="btnVolver" text="Volver" onAction="#onVolver" />
    </HBox>
</GridPane>
