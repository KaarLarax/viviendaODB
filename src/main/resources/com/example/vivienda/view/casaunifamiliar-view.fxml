<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vivienda.view.CasaUnifamiliarViewController" hgap="15" vgap="15" alignment="CENTER" styleClass="main-pane" style="-fx-padding: 20;">
    <Label text="Gestión de Casa Unifamiliar" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" styleClass="main-title" />
    <!-- Campo Dirección -->
    <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="txtDireccion" promptText="Ingrese dirección" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <!-- Campos de entrada -->
    <Label text="Superficie:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="txtSuperficie" promptText="Ingrese superficie" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Número Exterior:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="txtNumeroExterior" promptText="Ingrese número exterior" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Nº Pisos:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="txtNumeroPisos" promptText="Ingrese número de pisos" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Colonia:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="comboColonia" promptText="Seleccione colonia" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="200" />
    <Label text="Propietario:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <ComboBox fx:id="comboPropietario" promptText="Seleccione propietario" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="200" />

    <!-- Botones -->
    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2">
        <Button fx:id="btnAgregar" text="Crear" onAction="#onAgregar" />
        <Button fx:id="btnEditar" text="Actualizar" onAction="#onEditar" />
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar" />
        <Button fx:id="btnLimpiar" text="Limpiar" onAction="#onLimpiar" />
        <Button fx:id="btnListar" text="Listar" onAction="#onListar" />
    </HBox>

    <!-- Sección de filtrado -->
    <Label text="Filtrar por:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <HBox spacing="10" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="9">
        <ComboBox fx:id="filtroComboBox" prefWidth="150.0" promptText="Seleccione atributo" />
        <TextField fx:id="filtroTextField" prefWidth="200.0" promptText="Ingrese valor a buscar" />
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="casaUnifamiliarTable" GridPane.columnIndex="0" GridPane.rowIndex="10" GridPane.columnSpan="2" prefHeight="250" prefWidth="800">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="direccionColumn" text="Dirección" prefWidth="150" />
            <TableColumn fx:id="superficieColumn" text="Superficie" prefWidth="100" />
            <TableColumn fx:id="numeroExteriorColumn" text="Número Exterior" prefWidth="130" />
            <TableColumn fx:id="numeroPisosColumn" text="Nº Pisos" prefWidth="80" />
            <TableColumn fx:id="coloniaColumn" text="Colonia" prefWidth="120" />
            <TableColumn fx:id="propietarioColumn" text="Propietario" prefWidth="170" />
            <TableColumn fx:id="numeroHabitantesColumn" text="Nº Habitantes" prefWidth="100" />
        </columns>
    </TableView>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
