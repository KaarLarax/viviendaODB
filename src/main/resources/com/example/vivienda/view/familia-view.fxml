<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.vivienda.view.FamiliaViewController">
    <Label text="Apellidos:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="apellidosField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <HBox spacing="10" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Button fx:id="crearButton" onAction="#handleCreate" text="Crear" />
        <Button fx:id="actualizarButton" onAction="#handleUpdate" text="Actualizar" />
        <Button fx:id="eliminarButton" onAction="#handleDelete" text="Eliminar" />
        <Button fx:id="limpiarButton" onAction="#handleLimpiar" text="Limpiar" />
    </HBox>

    <TableView fx:id="familiaTable" prefHeight="300.0" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="100.0" text="ID" />
            <TableColumn fx:id="apellidosColumn" prefWidth="250.0" text="Apellidos" />
            <TableColumn fx:id="numMiembrosColumn" prefWidth="150.0" text="N. Miembros" />
        </columns>
    </TableView>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>

