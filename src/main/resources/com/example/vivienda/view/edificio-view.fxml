<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.vivienda.view.EdificioViewController">
    <Label text="Gestión de Edificios" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="direccionField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Superficie:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="superficieField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Número Exterior:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="numeroExteriorField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Colonia:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <ComboBox fx:id="comboColonia" promptText="Seleccione colonia" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="200" />
    <Label text="Propietario:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <ComboBox fx:id="comboPropietario" promptText="Seleccione propietario" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="200" />
    <HBox spacing="10" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="7">
        <Button fx:id="crearButton" onAction="#handleCreate" text="Crear" />
        <Button fx:id="actualizarButton" onAction="#handleUpdate" text="Actualizar" />
        <Button fx:id="eliminarButton" onAction="#handleDelete" text="Eliminar" />
        <Button fx:id="limpiarButton" text="Limpiar" />
        <Button fx:id="listarButton" onAction="#handleListar" text="Listar" />
    </HBox>

    <!-- Sección de filtrado -->
    <Label text="Filtrar por:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <HBox spacing="10" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="9">
        <ComboBox fx:id="filtroComboBox" prefWidth="150.0" promptText="Seleccione atributo" />
        <TextField fx:id="filtroTextField" prefWidth="200.0" promptText="Ingrese valor a buscar" />
    </HBox>

    <TableView fx:id="edificioTable" prefHeight="200.0" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="10">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nombreColumn" prefWidth="100.0" text="Nombre" />
            <TableColumn fx:id="direccionColumn" prefWidth="130.0" text="Dirección" />
            <TableColumn fx:id="superficieColumn" prefWidth="80.0" text="Superficie" />
            <TableColumn fx:id="numeroExteriorColumn" prefWidth="110.0" text="Número Exterior" />
            <TableColumn fx:id="coloniaColumn" prefWidth="100.0" text="Colonia" />
            <TableColumn fx:id="propietarioColumn" prefWidth="120.0" text="Propietario" />
            <TableColumn fx:id="numApartamentosColumn" prefWidth="100.0" text="Nº Apartamentos" />
            <TableColumn fx:id="numeroHabitantesColumn" prefWidth="100.0" text="Nº Habitantes" />
        </columns>
    </TableView>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
