<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.vivienda.view.PersonaViewController">
    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Apellido Paterno:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="apellidoPaternoField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Apellido Materno:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="apellidoMaternoField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="CURP:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="curpField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <HBox spacing="10" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="4">
        <Button onAction="#handleCreate" text="Crear" />
        <Button onAction="#handleUpdate" text="Actualizar" />
        <Button onAction="#handleDelete" text="Eliminar" />
    </HBox>
    <TableView fx:id="personaTable" prefHeight="200.0" GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="5">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="nombreColumn" prefWidth="150.0" text="Nombre" />
            <TableColumn fx:id="apellidoPaternoColumn" prefWidth="150.0" text="Apellido Paterno" />
            <TableColumn fx:id="apellidoMaternoColumn" prefWidth="150.0" text="Apellido Materno" />
            <TableColumn fx:id="curpColumn" prefWidth="180.0" text="CURP" />
        </columns>
    </TableView>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>

